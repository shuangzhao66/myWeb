bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

no-wrap()
  font-size: 12px
  text-overflow: ellipsis
  overflow: hidden
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px